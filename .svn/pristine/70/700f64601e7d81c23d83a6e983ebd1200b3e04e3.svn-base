<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/comment_iv_avatar"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_20"
        android:src="@mipmap/man_avatar" />

    <TextView
        android:id="@+id/comment_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_22"
        android:layout_marginTop="@dimen/px_30"
        android:layout_toRightOf="@+id/comment_iv_avatar"
        android:text="KK啊秋"
        android:textColor="#1a77b8"
        android:textSize="@dimen/px_text_28" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginTop="@dimen/px_30"
        android:layout_toLeftOf="@+id/comment_tv_zan_number"
        android:src="@mipmap/zan_red" />

    <TextView
        android:id="@+id/comment_tv_zan_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_30"
        android:text="123"
        android:textColor="#b3b3b3"
        android:textSize="@dimen/px_text_26" />

    <TextView
        android:id="@+id/comment_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_tv_name"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:layout_toRightOf="@+id/comment_iv_avatar"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="现在不是笑话他造岛的问题，是必须抢回来自己造的问题，同意的点右上角"
        android:textColor="#333"
        android:textSize="@dimen/px_text_30" />

    <TextView
        android:id="@+id/comment_tv_answer"
        android:textSize="@dimen/px_text_26"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:text="2016/9/12   16:02  .  回复"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_tv_content"
        android:layout_toRightOf="@+id/comment_iv_avatar" />
    <View
        android:layout_marginRight="@dimen/px_20"
        android:layout_toRightOf="@+id/comment_iv_avatar"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_below="@+id/comment_tv_answer"
        android:layout_marginTop="@dimen/px_20"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>
</RelativeLayout>