<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/application_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/dfkasfjasdfd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_260">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_130"
                android:background="#f00">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fdasfd"
                android:layout_width="@dimen/px_140"
                android:layout_height="@dimen/px_140"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/px_120"
                    android:layout_height="@dimen/px_120"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/avatar" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/general" />
            </RelativeLayout>

            <TextView
                android:id="@+id/fdaklfjlasdjf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fdasfd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px_20"
                android:text="用户012545"
                android:textColor="#000"
                android:textSize="@dimen/px_text_30" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dfkasfjasdfd"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/home_tv_masonry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginTop="@dimen/px_15"
                android:drawableLeft="@mipmap/masonry"
                android:drawablePadding="@dimen/px_10"
                android:text="@string/home_masonry_number"
                android:textColor="@color/home_personal_information"
                android:textSize="@dimen/px_text_24" />

            <View
                android:id="@+id/dfajkfjdafda"
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/px_30"
                android:background="#ccc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dfkasfjasdfd"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginTop="@dimen/px_15"
                android:layout_toRightOf="@+id/dfajkfjdafda"
                android:drawableLeft="@mipmap/flower"
                android:drawablePadding="@dimen/px_10"
                android:text="@string/home_masonry_number"
                android:textColor="@color/home_personal_information"
                android:textSize="@dimen/px_text_24" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>