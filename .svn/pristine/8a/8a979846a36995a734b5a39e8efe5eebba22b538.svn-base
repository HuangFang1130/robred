<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/shshsh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/WHITE" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tv_oneyuan_myroblist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="2016-03-09   17:08:32:169"
                android:textColor="#b3b3b3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_oneyuan_myroblist_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="进行中"
                android:textColor="#ff2448"
                android:textSize="15sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_oneyuan_myroblist_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="已结束"
                android:textColor="#666666"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_oneyuan_myroblist_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="未开始"
                android:textColor="#666666"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_oneyuan_myroblist_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:scaleType="centerInside"
                android:src="@mipmap/iphone6s" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="8"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_oneyuan_myroblist_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Apple iPhone6s Plus 64G 颜色随机"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_oneyuan_myroblist_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="[第1289期]"
                    android:textColor="#b3b3b3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_oneyuan_myroblist_code"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:gravity="bottom"
                    android:text="兑奖号："
                    android:textColor="#249cff"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_oneyuan_myroblist_goto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@mipmap/goto_3x" />
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_oneyuan_myroblist_jiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/jiang_3x"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/shshsh"></RelativeLayout>

</RelativeLayout>