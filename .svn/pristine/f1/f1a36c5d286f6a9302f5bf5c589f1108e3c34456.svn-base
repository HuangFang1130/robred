<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="500px"
        android:layout_height="650px"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_qianghongbao"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grab_pop_close"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px_30"
            android:src="@mipmap/close" />

        <ImageView
            android:id="@+id/grab_pop_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74px"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/grab_pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grab_pop_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26px"
            android:text="龙泉春"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/send_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grab_pop_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3px"
            android:text="发一个红包"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/grab_pop_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_red"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px"
            android:text="定制人生，专属回忆"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/grab_pop_anim"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_below="@+id/grab_pop_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62px"
            android:src="@mipmap/btn_qiang" />
    </RelativeLayout>
</RelativeLayout>