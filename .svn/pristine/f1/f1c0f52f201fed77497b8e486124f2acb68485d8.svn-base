<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_110">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20"
        android:id="@+id/message_rl_icon_content"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80">

        <ImageView
            android:id="@+id/message_iv_icddon"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:src="@mipmap/avatar_no_radios"
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70" />
        <View
            android:layout_centerHorizontal="true"
            android:id="@+id/message_iv_reddd_icon"
            android:background="@drawable/home_red_point"
            android:layout_width="@dimen/px_20"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/px_20"/>
        <TextView
            android:id="@+id/message_tv_medfdfssagenumber"
            android:text="5"
            android:gravity="center"
            android:textSize="@dimen/px_15"
            android:layout_width="@dimen/px_20"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/px_20"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/message_tv_typdddename"
        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:textColor="#000"
        android:text="刘岩"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:textSize="@dimen/px_text_26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_tv_tyfdapedes"
        android:text="您好"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_10"
        android:layout_below="@+id/message_tv_typdddename"
        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/messagfde_tv_date"
        android:layout_alignParentRight="true"
        android:text="2016/10/18"
        android:layout_marginRight="@dimen/px_20"
        android:textColor="#4000"
        android:textSize="@dimen/px_text_20"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>