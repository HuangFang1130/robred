<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px_28"
    android:paddingBottom="@dimen/px_28">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/red_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_32"
            android:textColor="#4D4D4D"/>

        <TextView
            android:id="@+id/red_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_23"
            android:textSize="@dimen/px_text_24"
            android:textColor="#B3B3B3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_layout"
        android:gravity="right"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/red_send_price"
            android:textColor="#4D4D4D"
            android:text="+500.00"
            android:textSize="@dimen/px_text_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/red_status"
            android:textColor="#B3B3B3"
            android:layout_marginTop="@dimen/px_24"
            android:text="10/20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/red_price"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_text_32"
        android:textColor="#4D4D4D"
        android:layout_gravity="center_vertical"/>
</LinearLayout>