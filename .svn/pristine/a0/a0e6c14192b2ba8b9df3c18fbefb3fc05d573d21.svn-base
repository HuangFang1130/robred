<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jiahehongye.robred.activity.HelpCenterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/helpcenter_rl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="帮助中心"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />

    </FrameLayout>

    <View
        android:background="@color/basebackground"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/helpcenter_ll_buy_rules"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="购物规则"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/helpcenter_ll_snatch_rules"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="拼运气规则"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/helpcenter_ll_enchashment_rules"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="提现规则"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/helpcenter_ll_robred_rules"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="抢红包规则"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/helpcenter_ll_wx_service"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="微信客服"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/basebackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
