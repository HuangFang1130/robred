<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/freshnews_content_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_20"
        android:lineSpacingExtra="@dimen/px_5"
        android:maxLines="2"
        android:textColor="@color/freshnews_tv_content"
        android:textSize="@dimen/px_text_30" />

    <ImageView
        android:id="@+id/freshnews_content_one_iv_des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_340"
        android:layout_below="@+id/freshnews_content_tv_title"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:scaleType="fitXY"
        android:src="@mipmap/default_img" />

     <TextView
        android:id="@+id/des"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginTop="@dimen/px_18"
        android:layout_below="@+id/freshnews_content_one_iv_des"
        android:text="科技正前言    228评论    28分钟前"
        android:layout_marginLeft="@dimen/px_20"
        android:textColor="@color/freshnews_et_hint"
        android:textSize="@dimen/px_text_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="@dimen/px_2"
        android:id="@+id/adv_dddd"
        android:visibility="visible"
        android:textSize="@dimen/px_text_18"
        android:background="@drawable/dd_guanggao"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:layout_below="@+id/freshnews_content_one_iv_des"
        android:text="广告"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_28" />
    <View
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_below="@+id/des"
        android:layout_marginTop="@dimen/px_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/view_background"/>

</RelativeLayout>