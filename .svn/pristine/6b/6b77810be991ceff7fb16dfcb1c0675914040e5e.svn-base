<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/freshnews_content_one_iv_des"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_20"
        android:src="@mipmap/timg"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_width="@dimen/px_220"
        android:layout_height="@dimen/px_140" />
    <TextView
        android:layout_toRightOf="@id/freshnews_content_one_iv_des"
        android:id="@+id/freshnews_content_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:lineSpacingExtra="@dimen/px_5"
        android:maxLines="2"
        android:text="@string/freshnews_tv_content2"
        android:textColor="@color/freshnews_tv_content"
        android:textSize="@dimen/px_text_30" />

    <TextView
        android:id="@+id/des"
        android:layout_marginTop="@dimen/px_43"
        android:layout_toRightOf="@id/freshnews_content_one_iv_des"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_below="@+id/freshnews_content_tv_title"
        android:layout_marginLeft="@dimen/px_20"
        android:textColor="@color/freshnews_et_hint"
        android:textSize="@dimen/px_text_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/zhiding"
        android:paddingRight="@dimen/px_5"
        android:paddingLeft="@dimen/px_5"
        android:paddingTop="@dimen/px_3"
        android:paddingBottom="@dimen/px_3"
        android:textSize="@dimen/px_20"
        android:background="@color/blue_corn"
        android:textColor="@color/white"
        android:text="置顶"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/des"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />
    <View
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_below="@+id/des"
        android:layout_marginTop="@dimen/px_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/view_background"
        android:id="@+id/view" />

</RelativeLayout>