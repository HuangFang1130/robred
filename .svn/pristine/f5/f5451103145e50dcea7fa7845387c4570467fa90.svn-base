            android:id="@+id/et_fenshu"
            android:text="X1"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_60"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/px_28"
            android:drawablePadding="@dimen/px_20"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"  />

        <Button
            android:id="@+id/chat_pop_btn_send"
            android:textColor="#fff"
            android:textSize="@dimen/px_text_28"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/comment_textview_shape"
            android:text="发送"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_45" />
