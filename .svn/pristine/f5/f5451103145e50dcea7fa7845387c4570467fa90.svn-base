    <LinearLayout
        android:layout_below="@+id/chat_pop_rl"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="98px">
        <TextView
            android:id="@+id/chat_pop_tv_masonry"
            android:text="钻石：5"
            android:textColor="#333333"
            android:textSize="@dimen/px_text_28"
            android:paddingLeft="@dimen/px_30"
            android:drawablePadding="@dimen/px_10"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/masonry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/chat_pop_recharge"
            android:text="去充值>>"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/px_text_24"
            android:layout_marginLeft="@dimen/px_25"
            android:layout_marginRight="@dimen/px_30"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
