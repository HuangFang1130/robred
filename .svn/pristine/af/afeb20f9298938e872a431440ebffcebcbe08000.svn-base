<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.jiahehongye.robred.activity.SetActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/setting_rl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />

    </FrameLayout>
    <View
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="消息提醒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/setting_ll_account_safe"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="账户安全"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/setting_ll_help_center"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="帮助中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <LinearLayout
        android:id="@+id/setting_ll_aboutus"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="关于我们"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>


    <LinearLayout
        android:id="@+id/setting_ll_suggestion"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">

        <TextView
            android:textSize="@dimen/px_32"
            android:textColor="@color/black"
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/usered_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/basebackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"/>

    <LinearLayout
        android:id="@+id/clean_"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">
        <TextView
            android:id="@+id/cachesize"
            android:textSize="@dimen/px_26"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="清空图片缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99">
        <TextView
            android:textSize="@dimen/px_30"
            android:textColor="@color/home_state_color"
            android:layout_gravity="center"
            android:text="退出登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/basebackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
