<?xml version="1.0" encoding="utf-8"?>
<resources>

    //自定义dialog的样式
    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/dialog_custom_bg</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    //自定义新闻滚动条
    <declare-styleable name="CustomRollingView">
        <attr name="textSize" format="reference"/>
        <attr name="textColor" format="reference"/>
    </declare-styleable>

    //自定义消息列表的头
    <declare-styleable name="CustomMessageLinearlayout">
        <attr name="messageIcon" format="reference"/>
        <attr name="messageTypeName" format="string"/>
        <attr name="messageTypeDes" format="string"/>
        <attr name="messageTimeDate" format="string"/>
    </declare-styleable>

</resources>