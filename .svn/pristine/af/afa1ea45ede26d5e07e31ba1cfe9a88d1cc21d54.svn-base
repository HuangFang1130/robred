<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEEEEE" >

    <LinearLayout
        android:id="@+id/ll_00"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/paypassword_rec"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/putpwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="请输入支付密码"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eeeeee"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-1dp" >

                <ImageView
                    android:id="@+id/one_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/one_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-1dp" >

                <ImageView
                    android:id="@+id/two_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/two_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-1dp" >

                <ImageView
                    android:id="@+id/three_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/three_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/four_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/four_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp" >

                <ImageView
                    android:id="@+id/five_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/five_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-1dp" >

                <ImageView
                    android:id="@+id/six_xxx"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_border" />

                <TextView
                    android:id="@+id/six_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="●"
                    android:textColor="#BBBABA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/btn_payway_cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_left"
                android:text="取消"
                android:textStyle="bold"
                android:textColor="#BBBABA"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="#00ffffff" />

            <Button
                android:id="@+id/btn_payway_commit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_right"
                android:text="确认"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="14sp" /> 
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_xxx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/ll_00"
        android:layout_alignRight="@id/ll_00"
        android:layout_centerInParent="true"
        android:background="@null"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:numeric="integer"
        android:textColor="#00ffffff"
        android:textCursorDrawable="@null" 
        android:cursorVisible="false"/>

</RelativeLayout>