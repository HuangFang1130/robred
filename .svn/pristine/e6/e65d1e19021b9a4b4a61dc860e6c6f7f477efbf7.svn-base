<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/basebackground"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jiahehongye.robred.activity.RechargeBalanceActivity">

    <RelativeLayout
        android:background="@color/home_state_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/rechargebalance_rl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/left_row" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="明细"
            android:textSize="@dimen/px_text_28"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/home_state_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_260"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_30"
        android:paddingTop="@dimen/px_45"
        android:paddingBottom="@dimen/px_45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额（元）"
            android:textColor="#80FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.86"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_90"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/rechargebalance_tv_recharge"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_60"
            android:background="@drawable/rechargebalance_bg_recharge"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_30"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rechargebalance_ll_enchashment"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="@dimen/px_35"
            android:layout_marginTop="@dimen/px_26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"
                android:textSize="@dimen/px_text_30"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text="可提现到支付宝"
                android:layout_marginBottom="@dimen/px_20"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/px_25"
            android:layout_gravity="center_vertical"
            android:gravity="right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/usered_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px_28"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#F2F2F2"/>

    <LinearLayout
        android:id="@+id/rechargebalance_ll_telfare"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="@dimen/px_35"
            android:layout_marginTop="@dimen/px_26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机充值"
                android:textSize="@dimen/px_text_30"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:text="充值话费"
                android:layout_marginBottom="@dimen/px_20"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/px_25"
            android:layout_gravity="center_vertical"
            android:gravity="right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/usered_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px_28"/>
    </LinearLayout>
</LinearLayout>
