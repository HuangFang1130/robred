<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_210">

    <RelativeLayout
        android:id="@+id/read_picdfsafdsfa"
        android:layout_width="@dimen/px_220"
        android:layout_height="@dimen/px_140"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
      >


        <ImageView
            android:id="@+id/freshnews_content_one_iv_des"
            android:src="@mipmap/default_img"
            android:scaleType="centerCrop"

            android:layout_width="@dimen/px_220"
            android:layout_height="@dimen/px_140" />


        <ImageView
            android:id="@+id/iv_video"
            android:alpha="0.8"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@mipmap/shipin_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:layout_toRightOf="@id/read_picdfsafdsfa"
        android:id="@+id/freshnews_content_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_100"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:lineSpacingExtra="@dimen/px_5"
        android:maxLines="2"
        android:text="@string/freshnews_tv_content2"
        android:textColor="@color/freshnews_tv_content"
        android:textSize="@dimen/px_text_30" />

    <TextView
        android:id="@+id/des"
        android:layout_marginTop="@dimen/px_18"
        android:layout_toRightOf="@id/read_picdfsafdsfa"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_below="@+id/freshnews_content_tv_title"
        android:layout_marginLeft="@dimen/px_20"
        android:text="dfdsafad"
        android:textColor="@color/freshnews_et_hint"
        android:textSize="@dimen/px_text_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/zhiding"
        android:paddingRight="@dimen/px_5"
        android:paddingLeft="@dimen/px_5"
        android:paddingTop="@dimen/px_3"
        android:paddingBottom="@dimen/px_3"
        android:textSize="@dimen/px_20"
        android:background="@color/blue_corn"
        android:textColor="@color/white"
        android:text="置顶"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/des"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />
    <View
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
       android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/px_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/view_background"
        android:id="@+id/view" />

</RelativeLayout>