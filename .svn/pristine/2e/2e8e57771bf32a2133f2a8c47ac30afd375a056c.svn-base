<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.jiahehongye.robred.activity.MySendRedDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/send_detailrl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/row_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发出的红包"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />
    </RelativeLayout>



    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mysendreddetail_swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/mysendreddetail_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="@null"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
