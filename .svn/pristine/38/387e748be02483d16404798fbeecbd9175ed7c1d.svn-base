<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_liwu"
    android:clickable="false"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:clickable="false"

        android:layout_width="@dimen/px_187"
        android:layout_height="@dimen/px_200">

        <ImageView
            android:id="@+id/iv_flower"
            android:layout_width="@dimen/px_80"
            android:layout_marginTop="@dimen/px_15"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/px_80"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_120"
            android:text="鲜花"
            android:textColor="#000"
            android:textSize="@dimen/px_text_24" />

        <TextView
            android:id="@+id/tv_masonry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_flower"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_10"
            android:drawablePadding="@dimen/px_10"
            android:gravity="bottom"
            android:drawableRight="@mipmap/masonry_small"
            android:text="12"
            android:textColor="#24C9FF"
            android:textSize="@dimen/px_text_24" />


        <CheckBox
            android:clickable="false"
            android:id="@+id/chat_send_gift_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:background="@drawable/chat_gift_checkbox_selector"
            android:button="@null" />

    </RelativeLayout>
</RelativeLayout>