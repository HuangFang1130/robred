                    int dd = 0;
                    List<DFTTNewsResult.DataBean> data1 = dfttAdvResult.getData();


                    /**
                     * 遍历最外面的。然后在第几个位置停下来
                     *  取第一个位置的数据放进来
                     */
                    if (data!=null){
                        for (int i = 0; i < data.size(); i++) {
                            if (i == 3 || i == 8 || i == 13 || i == 18) {
                                if(data1.size()==0){
                                    break;
                                }

                                if (i == 3 || i == 13) {
                                    DFTTNewsResult.DataBean dataBean = data1.get(0);
                                    dataBean.setBigpic("1");
                                }
