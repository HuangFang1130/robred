<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="#dc5151"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_250">
        <TextView
            android:id="@+id/detail_liuyan"
            android:textSize="@dimen/px_28"
            android:textColor="@color/white"
            android:text="定制人生 专属回忆 龙泉春酒庄洞藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reddetail_status"
            android:layout_marginTop="@dimen/px_25"
            android:textSize="@dimen/px_20"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_numberdetail"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/px_10"
            android:text="已领取10/10个，共0.50/0.50元"
            android:textSize="@dimen/px_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/px_20"
        android:visibility="gone"
        android:id="@+id/detail_GGimg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/detail_guanImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300" />

    <TextView
        android:id="@+id/introduction"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>