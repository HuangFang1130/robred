<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_140">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140">

        <ImageView
            android:id="@+id/address_iv_avatar"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:scaleType="centerCrop"
            android:background="@mipmap/headsq_pic" />

        <TextView
            android:id="@+id/address_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/address_iv_avatar"
            android:text="@string/home_username"
            android:textColor="@color/home_user_name"
            android:textSize="@dimen/px_text_26" />

        <ImageView
            android:id="@+id/address_tv_gener"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_28"
            android:layout_below="@+id/address_tv_name"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/address_iv_avatar"
            android:background="#faa9a4"
            android:src="@mipmap/women"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/address_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_28"
            android:layout_below="@+id/address_tv_name"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/address_tv_gener"
            android:scaleType="fitStart"
            android:src="@mipmap/general" />

        <TextView
            android:id="@+id/address_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_tv_level"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@+id/address_iv_avatar"
            android:maxLines="1"
            android:hint="未填写个性签名"
            android:textColor="#808080"
            android:textSize="@dimen/px_text_22" />

        <TextView
            android:id="@+id/address_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:text="10.5km"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/px_text_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@+id/address_iv_avatar"
            android:background="#ccc" />
    </RelativeLayout>
</LinearLayout>