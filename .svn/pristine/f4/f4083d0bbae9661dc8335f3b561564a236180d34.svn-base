<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120">


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/rank_number4"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/px_28"
            android:layout_width="@dimen/px_124"
            android:layout_height="@dimen/px_60" />


        <LinearLayout
            android:layout_marginLeft="@dimen/px_40"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rank_number4"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="@dimen/px_80"
                    android:layout_height="@dimen/px_80"
                    android:src="@mipmap/paiming_bg"
                    android:layout_gravity="center" />
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tong"
                    android:layout_gravity="center_horizontal|top" />
                <ImageView
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/px_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/three"
                    android:layout_gravity="center_horizontal|bottom" />
            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/px_40"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/px_32"
                        android:text="打发打发"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:paddingRight="@dimen/px_10"
                        android:paddingLeft="@dimen/px_10"
                        android:background="@color/man_back"
                        android:layout_marginLeft="@dimen/px_20"
                        android:src="@mipmap/women"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_28" />
                    <ImageView
                        android:layout_marginLeft="@dimen/px_20"
                        android:src="@mipmap/general"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_28" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/px_14"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grabred_state"
                        android:textSize="@dimen/px_28"
                        android:text="贡献"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/px_28"
                        android:textColor="@color/gold_color"
                        android:text="111111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/grabred_state"
                        android:textSize="@dimen/px_28"
                        android:text="金币"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>


</LinearLayout>