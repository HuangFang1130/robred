<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_100">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20"
        android:id="@+id/message_rl_icon_content"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80">

        <ImageView
            android:layout_marginTop="@dimen/px_8"
            android:layout_marginRight="@dimen/px_8"
            android:id="@+id/message_iv_icon"
            android:scaleType="fitXY"
            android:src="@mipmap/message_system"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80" />

        <View
            android:layout_centerHorizontal="true"
            android:id="@+id/message_iv_red_icon"
            android:background="@drawable/home_red_point"
            android:layout_width="@dimen/px_15"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/px_15"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/message_tv_typename"
        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:textColor="#000"
        android:text="通知消息"
        android:layout_marginLeft="@dimen/px_20"

        android:layout_marginTop="@dimen/px_15"
        android:textSize="@dimen/px_text_26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_tv_typedes"
        android:text="有新的消息了"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_10"
        android:layout_below="@+id/message_tv_typename"
        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message_tv_date"
        android:layout_alignParentRight="true"
        android:text="2016/10/18"
        android:layout_marginRight="@dimen/px_20"
        android:textColor="#4000"
        android:textSize="@dimen/px_text_20"
         android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>