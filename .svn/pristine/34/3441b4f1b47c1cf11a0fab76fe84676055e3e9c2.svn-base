<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="金猴宝"
            android:textColor="@color/theme_color"
            android:textSize="42px" />

        <TextView
            android:id="@+id/home_head_rich"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="富豪榜"
            android:drawablePadding="@dimen/px_4"
            android:gravity="center_vertical"
            android:textColor="#b3b3b3"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/px_10"

            android:drawableLeft="@mipmap/fuhaobang" />
    </RelativeLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.design.widget.TabLayout
        style="@style/MyCustomTabLayout2"
        tabMode="scrollable"
        android:id="@+id/fragment_home_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        app:tabIndicatorHeight="4px"
        app:tabSelectedTextColor="@color/theme_color" />
    <View

        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>


</LinearLayout>