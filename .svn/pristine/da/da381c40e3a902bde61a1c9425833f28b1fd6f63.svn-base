<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_120"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="#fff"
        android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/avatar_container"
                android:layout_width="@dimen/px_120"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true" >

                <ImageView
                    android:id="@+id/message_iv_icddon"
                    android:layout_width="@dimen/px_80"
                    android:layout_height="@dimen/px_80"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_20"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ease_default_avatar" />

                <TextView
                    android:id="@+id/message_tv_unreade_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_10"
                    android:layout_marginTop="@dimen/px_6"
                    android:background="@drawable/ease_unread_count_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px_text_24" />
            </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_toRightOf="@+id/avatar_container">

            <TextView
                android:id="@+id/message_tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘岩"
                android:textColor="#000"
                android:textSize="@dimen/px_text_26" />

            <TextView
                android:id="@+id/message_tv_type_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_tv_type_name"
                android:layout_marginTop="@dimen/px_10"
                android:text="您好"
                android:textColor="#4000"
                android:textSize="@dimen/px_text_22" />


        </RelativeLayout>


        <TextView
            android:id="@+id/message_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:text="2016/10/18"
            android:textColor="#4000"
            android:textSize="@dimen/px_text_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/view_background" />
    </RelativeLayout>
</LinearLayout>