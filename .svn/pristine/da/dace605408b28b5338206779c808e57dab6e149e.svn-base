<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        android:background="@color/home_state_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30" />

            <RelativeLayout
                android:id="@+id/mine_rl_setting"
                android:layout_width="@dimen/px_80"
                android:layout_height="@dimen/px_80"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_30"
                    android:src="@mipmap/setting" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mine_ll_change_myself"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mine_iv_userhead"
                android:layout_width="@dimen/px_80"
                android:layout_height="@dimen/px_80"
                android:background="@mipmap/avatar_mine" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_22"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mine_tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_username"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_text_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_13"
                        android:text="@string/mine_change_myself"
                        android:textColor="#80FEFEFE" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/arrows_center_right" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mine_ll_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_180"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px_42"
                    android:text="@string/mine_account"
                    android:textColor="#B3B3B3"
                    android:textSize="@dimen/px_24" />

                <TextView
                    android:id="@+id/mine_tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px_10"
                    android:text="0.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/px_text_60" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_132"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_ll_myred"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/my_red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_my_red"
                            android:textColor="#B3B3B3"
                            android:textSize="@dimen/px_text_24" />

                        <TextView
                            android:id="@+id/mine_tv_myred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_text_13"
                            android:text="0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/px_text_30" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_ll_account_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/account_balance" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mine_account_balance"
                            android:textColor="#B3B3B3"
                            android:textSize="@dimen/px_text_24" />

                        <TextView
                            android:id="@+id/mine_tv_account_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_text_13"
                            android:text="0.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/px_text_30" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20"
                android:background="#F2F2F2" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_140"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_all_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/all_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_13"
                        android:text="@string/mine_all_order"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_text_26" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_waitpay_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wait_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_13"
                        android:text="@string/mine_wait_pay"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_text_26" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_waitsend_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wait_goods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_13"
                        android:text="@string/mine_wait_foods"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_text_26" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_waitrefund_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/take_goods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_13"
                        android:text="@string/mine_take_goods"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_text_26" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20"
                android:background="#F2F2F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_377"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mine_ll_my_diamond"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/my_diamond" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_my_diamond"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_my_present"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/my_present" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_my_present"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_rob_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rob_center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_rob_center"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_my_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/my_comment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_my_comment"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="#F2F2F2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mine_ll_service_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/service_center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_service_center"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_invite_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/invite_friend" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_invite_friend"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_suggestion_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/suggestion_back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_suggestion_back"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_40"
                        android:background="#F2F2F2" />

                    <LinearLayout
                        android:id="@+id/mine_ll_about_us"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/about_us" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="@string/mine_about_us"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_text_26" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>