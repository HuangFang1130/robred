<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_weight="96"
            android:scaleType="fitCenter"
            android:src="@mipmap/oneyuan_message" />

        <com.jiahehongye.robred.view.AlwaysMarqueeTextView
            android:id="@+id/tv_always"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="490"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/basebackground" />

        <TextView
            android:id="@+id/tv_oneyuan_home_myroblist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="164"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="我的抢单"
            android:textColor="#ff0000" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_xxx"
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <android.support.v4.view.ViewPager
            android:id="@+id/oneyuan_home_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_360"
            android:background="@mipmap/viewpager3"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/oneyuan_home_banner"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llsv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <com.jiahehongye.robred.view.ObservableHorizontalScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.jiahehongye.robred.view.ObservableHorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:id="@+id/ll_oneyuan_home_listrule1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_moren1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_moren1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="默认排序"
                    android:textColor="@color/red" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_price1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_price_up1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_price_down1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_noarrows1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/noupnodown_3x"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_renqi1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_renqi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_renqi_up1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_renqi_down1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_noarrows2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/noupnodown_3x"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_shengyu1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_shengyu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余人次" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_shengyu_up1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_shengyu_down1"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_noarrows3"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/noupnodown_3x"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>