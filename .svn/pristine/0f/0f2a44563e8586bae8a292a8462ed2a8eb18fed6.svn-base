<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl_liwu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:background="@mipmap/send_flower"
        android:layout_width="@dimen/px_187"
        android:layout_height="@dimen/px_200">

        <TextView
            android:layout_marginTop="@dimen/px_120"
            android:id="@+id/tv_flower"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/px_text_24"
            android:textColor="#000"
            android:text="鲜花"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/px_10"
            android:layout_below="@+id/tv_flower"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/px_text_24"
            android:textColor="#24C9FF"
            android:text="0"
            android:drawablePadding="@dimen/px_10"
            android:drawableRight="@mipmap/masonry_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <CheckBox
            android:id="@+id/chat_send_gift_checkbox"
            android:button="@null"
            android:background="@drawable/chat_gift_checkbox_selector"
            android:layout_marginRight="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>