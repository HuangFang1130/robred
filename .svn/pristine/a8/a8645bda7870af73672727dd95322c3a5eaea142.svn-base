<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptrlv_oneyuan_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:focusable="false"
            android:focusableInTouchMode="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <LinearLayout
        android:id="@+id/llsv2"
        android:focusable="false"
            android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.jiahehongye.robred.view.ObservableHorizontalScrollView
            android:id="@+id/sv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_hsv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </com.jiahehongye.robred.view.ObservableHorizontalScrollView>

        <View
            android:id="@+id/vvvvv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sv2"
            android:background="#f2f2f2" />

        <LinearLayout
            android:id="@+id/ll_oneyuan_home_listrule2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_moren2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_moren2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="默认排序"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_price2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_price_up2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_price_down2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="gone" />
                    
                    <ImageView 
                        android:id="@+id/iv_oneyuan_home_noarrows4"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:visibility="visible"
                        android:src="@mipmap/noupnodown_3x"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_renqi2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_renqi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_renqi_up2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_renqi_down2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="gone" />
                    
                    <ImageView 
                        android:id="@+id/iv_oneyuan_home_noarrows5"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:visibility="visible"
                        android:src="@mipmap/noupnodown_3x"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/ll_oneyuan_home_shengyu2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_oneyuan_home_shengyu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余人次"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_shengyu_up2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/donwtoup_3x"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_oneyuan_home_shengyu_down2"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/uptodown_3x"
                        android:visibility="gone" />
                    
                    <ImageView 
                        android:id="@+id/iv_oneyuan_home_noarrows6"
                        android:layout_width="10dp"
                        android:layout_height="14dp"
                        android:visibility="visible"
                        android:src="@mipmap/noupnodown_3x"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>