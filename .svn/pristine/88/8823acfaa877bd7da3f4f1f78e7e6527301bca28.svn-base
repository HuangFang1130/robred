        }else if(gender.equals("1")){//男
            Glide.with(UIUtils.getContext()).load(R.mipmap.men).into(mIvMenOrWomen);
            mIvMenOrWomen.setBackgroundColor(getResources().getColor(R.color.man_back));
        }else if(gender.equals("2")){ //女
