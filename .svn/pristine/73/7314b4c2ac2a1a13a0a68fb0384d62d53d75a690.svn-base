<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jiahehongye.robred.activity.ChangePhoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/changephone_rl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/row_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更换手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />
    </RelativeLayout>

    <EditText
        android:id="@+id/changephone_et_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_100"
        android:paddingLeft="@dimen/px_40"
        android:paddingRight="@dimen/px_40"
        android:maxLines="1"
        android:maxLength="18"
        android:ellipsize="end"
        android:hint="请输入当前账户密码"
        android:textColorHint="@color/grabred_tv_dd"
        android:gravity="center_vertical"
        android:background="@drawable/changephone_bg_et"
        android:textSize="@dimen/px_text_32"/>

    <Button
        android:id="@+id/changephone_btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_77"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/px_text_30"
        android:background="@drawable/changephone_bg_btn"/>
</LinearLayout>
