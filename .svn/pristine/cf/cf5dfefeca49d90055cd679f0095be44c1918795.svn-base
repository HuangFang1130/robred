<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/home_white_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contanct_detail_iv_back_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_20"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/sendred_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="基本资料"
            android:textColor="#000"
            android:textSize="@dimen/px_text_34" />

        <TextView
            android:id="@+id/contanct_detail_more_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="@dimen/px_20"
            android:text="更多"
            android:textColor="#999"
            android:textSize="@dimen/px_text_30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:background="#ccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_rl_personal_information"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/home_white_color">

        <ImageView
            android:id="@+id/home_iv_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:src="@mipmap/avatar_no_radios" />

        <TextView
            android:id="@+id/home_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@+id/home_iv_avatar"
            android:text="@string/home_username"
            android:textColor="@color/home_user_name"
            android:textSize="@dimen/px_text_26" />


        <ImageView
            android:id="@+id/home_tv_level"
            android:layout_width="40px"
            android:layout_height="@dimen/px_28"
            android:layout_marginLeft="@dimen/px_20"
            android:scaleType="fitCenter"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@+id/home_tv_name"
            android:background="#faa9a4"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:src="@mipmap/women" />

        <ImageView
            android:id="@+id/home_tv_levelfdafd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_28"
            android:layout_marginLeft="10px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@+id/home_tv_level"
            android:scaleType="fitXY"
            android:src="@mipmap/general" />

        <TextView
            android:id="@+id/home_tvdfsafda_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_tv_name"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/home_iv_avatar"
            android:maxLines="1"
            android:text="ID:123456"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/px_text_24" />

    </RelativeLayout>

    <View
        android:id="@+id/fdads"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#4ccc" />

    <TextView
        android:id="@+id/fdasfdadfsafdsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdads"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="20px"
        android:maxLines="1"
        android:text="个人信息"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdasfdadfsafdsa"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="家乡：黑龙江\n职业：自由\n学校：清华大学"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="20px"
        android:maxLines="1"
        android:text="个人签名"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="我独自的对白，静待彼岸的花开"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="20px"
        android:maxLines="1"
        android:text="兴趣爱好"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="看书、象棋、钢琴"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="20px"
        android:maxLines="1"
        android:text="个人说明"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="流年无恙，故人在何方，岁月中有多少回眸的叹息，品寂寞，悟人生。"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <RelativeLayout
        android:background="#4ccc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/contanct_detail_rg_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_alignParentBottom="true"
            android:background="#f00"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/contanct_detail_rb_hot"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/chat"
                android:text="热点" />

            <RadioButton
                android:id="@+id/contanct_detail_rb_gift"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/send_gift_small"
                android:text="送礼物" />

            <RadioButton
                android:id="@+id/contanct_detail_rb_report"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/report"
                android:text="举报" />

        </RadioGroup>

    </RelativeLayout>


</LinearLayout>