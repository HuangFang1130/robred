<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiahehongye.robred.view.CustomMessageLinearlayout
        android:id="@+id/message_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:messageIcon="@mipmap/message_notify"
        app:messageTimeDate="2016/10/17"
        app:messageTypeDes="您参与的一元夺宝开抢啦！"
        app:messageTypeName="通知消息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ccc" />

    <com.jiahehongye.robred.view.CustomMessageLinearlayout
        android:id="@+id/message_interaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:messageIcon="@mipmap/message_interaction"
        app:messageTimeDate="2016/10/17"
        app:messageTypeDes="您有新的评论，快去看看吧！"
        app:messageTypeName="互动消息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ccc" />

    <com.jiahehongye.robred.view.CustomMessageLinearlayout
        android:id="@+id/message_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:messageIcon="@mipmap/message_system"
        app:messageTimeDate="2016/10/17"
        app:messageTypeDes="您有新的消息，快去看看吧！"
        app:messageTypeName="系统消息" />
    <View
        android:layout_width="match_parent"
        android:background="#4ccc"
        android:layout_height="@dimen/px_20"
        />

</LinearLayout>