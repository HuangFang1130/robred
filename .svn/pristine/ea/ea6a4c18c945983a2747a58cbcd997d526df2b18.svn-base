<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/red_detail_fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:background="@color/home_white_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/red_detail_back_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_20"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/grabred_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="红包详情"
            android:textColor="#000"
            android:textSize="@dimen/px_text_34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:background="#ccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/red_detail_rl_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_detail_rl_chat"
        android:layout_marginTop="-25px"
        android:background="#f2f2f2"
        android:paddingBottom="@dimen/px_20"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/hongbao_bg"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/red_detail_tv_luck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_30"
            android:text="恭喜您，获得现金红包"
            android:textColor="#8c1a24"
            android:textSize="@dimen/px_text_38" />

        <TextView
            android:id="@+id/fdasfdaf"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_60"
            android:layout_below="@+id/red_detail_tv_luck"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_40"
            android:background="#ffde24"
            android:gravity="center"
            android:paddingLeft="@dimen/px_40"

            android:paddingRight="@dimen/px_40"
            android:text="点击拆红包"
            android:textColor="#491012"
            android:textSize="@dimen/px_text_28" />

        <TextView
            android:id="@+id/red_detail_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_detail_tv_luck"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_20"
            android:text="0.5元"
            android:textColor="#ff2448"
            android:textSize="@dimen/px_text_50"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_detail_tv_money"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_10"
            android:text="查看我的红包 >>"
            android:textColor="#8c1a24"
            android:textSize="@dimen/px_text_26"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/red_detail_rl_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_detail_fl_title"
        android:background="@mipmap/personal_information">

        <ImageView
            android:id="@+id/red_detail_iv_avatar"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:src="@mipmap/grab_avatar" />

        <TextView
            android:id="@+id/red_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginTop="@dimen/px_35"
            android:layout_toRightOf="@+id/red_detail_iv_avatar"
            android:text="龙泉春酒庄窖藏"
            android:textColor="#fff"
            android:textSize="@dimen/px_text_26" />

        <TextView
            android:id="@+id/red_detail_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="@dimen/px_35"
            android:layout_toRightOf="@+id/red_detail_tv_name"
            android:background="@color/home_level_color"
            android:paddingLeft="@dimen/px_8"
            android:paddingRight="@dimen/px_8"
            android:text="@string/home_level_tv"
            android:textColor="@color/home_white_tv_color"
            android:textSize="@dimen/px_text_20" />

        <TextView
            android:id="@+id/red_detail_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_detail_tv_name"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginTop="@dimen/px_15"
            android:layout_toRightOf="@+id/red_detail_iv_avatar"
            android:text="暂无介绍"
            android:textColor="#b000"
            android:textSize="@dimen/px_text_24" />


        <TextView
            android:id="@+id/red_detail_tv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/red_detail_btn_selector"
            android:gravity="center"
            android:text="与 TA 对 话"
            android:textColor="#633114"
            android:textSize="@dimen/px_text_26" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/record_detail_rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_800"
        android:layout_below="@+id/red_detail_rl_money"
        android:visibility="gone">

        <ImageView
            android:id="@+id/record_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_400"
            android:background="@mipmap/timg"
            android:scaleType="fitXY" />


        <WebView
            android:id="@+id/record_detail_webview_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_250"
            android:layout_below="@+id/record_detail_image"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginTop="@dimen/px_20" />

        <ImageView
            android:id="@+id/record_detail_iv_down_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_20"
            android:layout_below="@+id/record_detail_webview_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/row_down" />


    </RelativeLayout>


    <TextView
        android:id="@+id/red_detail_tv_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:layout_below="@+id/record_detail_rl_top"
        android:layout_marginLeft="@dimen/px_20"
        android:gravity="center_vertical"
        android:text="10/1000"
        android:textColor="#b3b3b3"
        android:textSize="@dimen/px_text_24" />

    <View
        android:id="@+id/fdklsajfkldaklf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/red_detail_tv_number"
        android:background="#ccc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/red_detail_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fdklsajfkldaklf">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>