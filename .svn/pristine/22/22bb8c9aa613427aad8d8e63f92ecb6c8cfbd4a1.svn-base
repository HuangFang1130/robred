<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jiahehongye.robred.activity.FeedBackActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/feed_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />

        <RelativeLayout
            android:id="@+id/feed_up"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_80"
            android:layout_gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/home_state_color"
                android:textSize="@dimen/px_text_30"/>
        </RelativeLayout>
    </FrameLayout>
    <View
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>
    <EditText
        android:id="@+id/lianxifangshi"
        android:textSize="@dimen/px_text_28"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@null"
        android:hint="@string/lianxifangshi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88" />


    <View
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/fengexian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <EditText
        android:id="@+id/fankuineirong"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:gravity="top"
        android:textSize="@dimen/px_text_28"
        android:background="@null"
        android:hint="@string/neirong"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
