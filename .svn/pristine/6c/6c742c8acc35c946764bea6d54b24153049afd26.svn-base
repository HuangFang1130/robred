<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        >

        <com.jiahehongye.robred.view.CircleImageView
            android:id="@+id/relation_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/headsq_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/relation_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/relation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会飞的鱼"
                android:textColor="#333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/relation_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="125篇文章    126人粉丝"
                android:textColor="#999"
                android:textSize="24px" />

        </LinearLayout>

        <TextView
            android:id="@+id/relation_attenion"
            android:layout_width="120px"
            android:layout_height="56px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:background="@drawable/task_head_support_gray"
            android:gravity="center"
            android:text="已关注"
            android:textColor="#B2AFAA"
            android:textSize="26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:background="@color/line_color" />


    </RelativeLayout>
</LinearLayout>
