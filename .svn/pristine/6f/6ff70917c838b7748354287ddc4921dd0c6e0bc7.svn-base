<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jiahehongye.robred.activity.EnchashmentActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/enchashment_rl_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/row_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />

        <TextView
            android:id="@+id/tixian_shuoming"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现说明"
            android:textSize="@dimen/px_text_28"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/basebackground"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_99"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号"
                android:textColor="#333333"
                android:textSize="@dimen/px_text_32"/>
            <EditText
                android:id="@+id/zfb_zhanghao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="请输入您的支付宝账号"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/px_text_32"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/basebackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_99"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="@dimen/px_text_32"/>
            <EditText
                android:id="@+id/zfb_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="请输入您的真实姓名"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/px_text_32"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/basebackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_99"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额（元）"
                android:textColor="#333333"
                android:textSize="@dimen/px_text_32"/>
            <EditText
                android:id="@+id/red_tixiannum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="11"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:gravity="right|center_vertical"
                android:textSize="@dimen/px_text_32"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/red_tixian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_99"
        android:text="提现"
        android:textSize="@dimen/px_text_35"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/usered_bg_enchashment"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_99"/>
</LinearLayout>
