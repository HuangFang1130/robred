<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_120"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/message_rl_icon_content"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20">

            <ImageView
                android:id="@+id/message_iv_icddon"
                android:layout_width="@dimen/px_80"
                android:layout_height="@dimen/px_80"
                android:layout_marginRight="@dimen/px_10"
                android:layout_marginTop="@dimen/px_10"
                android:scaleType="fitXY"
                android:src="@mipmap/avatar_no_radios" />

            <RelativeLayout
                android:id="@+id/message_rl_view"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20"
                android:layout_alignParentRight="true">

                <View
                    android:id="@+id/message_iv_reddd_icon"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/home_red_point" />

                <TextView
                    android:id="@+id/message_tv_unreade_number"
                    android:layout_width="@dimen/px_20"
                    android:layout_height="@dimen/px_20"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_15" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toRightOf="@+id/message_rl_icon_content">

            <TextView
                android:id="@+id/message_tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘岩"
                android:textColor="#000"
                android:textSize="@dimen/px_text_26" />

            <TextView
                android:id="@+id/message_tv_type_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_tv_type_name"
                android:layout_marginTop="@dimen/px_10"
                android:text="您好"
                android:textColor="#4000"
                android:textSize="@dimen/px_text_22" />


        </RelativeLayout>


        <TextView
            android:id="@+id/message_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:text="2016/10/18"
            android:textColor="#4000"
            android:textSize="@dimen/px_text_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/view_background" />
    </RelativeLayout>
</LinearLayout>