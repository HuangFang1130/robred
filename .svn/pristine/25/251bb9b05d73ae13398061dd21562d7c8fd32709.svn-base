<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px_28"
    android:paddingBottom="@dimen/px_28">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢红包"
            android:textSize="@dimen/px_32"
            android:textColor="#4D4D4D"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_23"
            android:text="2016-12-02"
            android:textSize="@dimen/px_text_24"
            android:textColor="#B3B3B3"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+500.00"
        android:textSize="@dimen/px_text_32"
        android:textColor="#FF2424"
        android:layout_gravity="center_vertical"/>
</LinearLayout>