<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">

    <TextView
        android:id="@+id/freshnews_content_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_20"
        android:lineSpacingExtra="@dimen/px_5"
        android:maxLines="2"
        android:text="@string/freshnews_tv_content3"
        android:textColor="@color/freshnews_tv_content"
        android:textSize="@dimen/px_text_30" />

    <LinearLayout
        android:layout_below="@+id/freshnews_content_tv_title"
        android:id="@+id/freshnews_content_iv_des"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px_15"
        android:layout_marginRight="@dimen/px_20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/freshnews_content_iv1"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_140"
            android:scaleType="fitXY"
            android:src="@mipmap/timg" />
        <ImageView
            android:id="@+id/freshnews_content_iv2"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_weight="1"
            android:layout_height="@dimen/px_140"
            android:scaleType="fitXY"
            android:src="@mipmap/timg" />
        <ImageView
            android:id="@+id/freshnews_content_iv3"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_140"
            android:scaleType="fitXY"
            android:src="@mipmap/timg" />


    </LinearLayout>


    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freshnews_content_iv_des"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_18"
        android:text="科技正前言     228评论    28分钟前"
        android:textColor="@color/freshnews_et_hint"
        android:textSize="@dimen/px_text_20" />

    <TextView
        android:id="@+id/adv_dddd"
        android:visibility="gone"
        android:textSize="@dimen/px_text_20"
        android:background="@drawable/dd_guanggao"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_18"
        android:layout_below="@+id/freshnews_content_iv_des"
        android:text="广告"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_28" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/des"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_5"
        android:background="@color/view_background" />

</RelativeLayout>