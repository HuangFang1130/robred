<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>


    <!--自定义的tablayout样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/home_state_color</item>

    </style>

    <!--homefragment头布局中radiogroup的样式-->
    <style name="home_Bottom_Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/px_20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/px_text_28</item>
        <item name="android:gravity">center</item>
    </style>

    <!--mainactivity底部导航栏的样式-->
    <style name="main_Bottom_Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/px_9</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/px_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/px_text_22</item>
        <item name="android:textColor">@color/home_bottom_selector</item>
        <item name="android:gravity">center</item>

    </style>
    <!--login底部导航栏的样式-->
    <style name="login_Bottom_Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">@dimen/px_10</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/px_9</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/px_text_22</item>
        <item name="android:textColor">#808080</item>
        <item name="android:gravity">center</item>

    </style>

    <!-- 自定义ProgressBar -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">@dimen/px_50</item>
        <item name="android:minHeight">@dimen/px_15</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <!--抢红包页面-->
    <style name="grabred_address_pager">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/grabred_rg_selector</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/grabred_rg_selector</item>
        <item name="android:textSize">@dimen/px_text_30</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PopStyle" parent="@android:style/Theme.Dialog"/>
        <!-- 更换背景图片实现全透明 -->
        <!--<int</item>
        <item name="android:layout_marginLeft">@dimen/px_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/right_row</item>
        <item name="android:textColor">#010101</item>
        <item name="android:paddingRight">@dimen/px_20</item>
        <item name="android:textSize">@dimen/px_text_28</item>
        <item name="android:layout_height">@dimen/px_80</item>
    </style>

    <!-//分割线的样式-->
    <style name="LineView_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/basebackground</item>
        <item name="android:layout_height">@dimen/px_1</item>
        <item name="android:layout_marginLeft">@dimen/px_20</item>
        <item name="android:layout_marginRight">@dimen/px_20</item>

    </style>

    <!--mainactivity底部导航栏的样式-->
    <style name="contact_Bottom_Tab_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/px_50</item>
        <item name="android:drawablePadding">@dimen/px_14</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/px_text_30</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <!--登录界面输入框样式-->
    <style name="login_input_textview">
        <item name="android:drawablePadding">@dimen/px_30</item>
        <item name="android:paddingLeft">@dimen/px_35</item>
        <item name="android:layout_height">@dimen/px_80</item>
        <item name="android:layout_width">@dimen/px_590</item>
        <item name="android:textColorHint">@color/login_et_hint</item>
        <item name="android:background">@drawable/login_edittext_shape</item>
        <item name="android:textSize">@dimen/px_text_28</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/login_et_content</item>
        <!--<item name="android:textCursorDrawable">@null</item>-->
    </style>

    <!--登录界面登录按钮样式-->
    <style name="login_button">
        <item name="android:layout_width">@dimen/px_590</item>
        <item name="android:layout_height">@dimen/px_80</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textColor">@color/login_tv_title</item>
    </style>

    <!--登录界面注册按钮样式-->
    <style name="register_button">
        <item name="android:layout_width">@dimen/px_590</item>
        <item name="android:layout_height">@dimen/px_80</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/login_edittext_shape</item>
        <item name="android:textColor">@color/login_bt_register</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_normal">
        <item name="android:textStyle">normal</item>
    </style>

    <!--发红包问题 样式-->
    <style name="setting_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/px_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/right_row</item>
        <item name="android:textColor">#010101</item>
        <item name="android:paddingRight">@dimen/px_20</item>
        <item name="android:textSize">@dimen/px_text_28</item>
        <item name="android:layout_height">@dimen/px_80</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_zhifu_show</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_zhifu_hide</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
