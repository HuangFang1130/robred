<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:background="@color/home_white_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contanct_detail_iv_back_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_20"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/sendred_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="基本资料"
            android:textColor="#000"
            android:textSize="@dimen/px_text_34" />

        <TextView
            android:id="@+id/contanct_detail_more_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:paddingRight="@dimen/px_20"
            android:text="更多"
            android:textColor="#999"
            android:textSize="@dimen/px_text_30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:background="#ccc" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/home_rl_personal_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:background="@color/home_white_color">

            <ImageView
                android:id="@+id/address_detail_avatar"
                android:layout_width="@dimen/px_100"
                android:layout_height="@dimen/px_100"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_20"
                android:scaleType="centerCrop"
                android:src="@mipmap/headsq_pic" />

            <TextView
                android:id="@+id/address_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_24"
                android:text="我是谁"
                android:layout_toRightOf="@+id/address_detail_avatar"
                android:textColor="@color/home_user_name"
                android:textSize="@dimen/px_text_26" />


            <ImageView
                android:id="@+id/address_detail_menorwomen"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_28"
                android:layout_marginLeft="@dimen/px_20"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/px_24"
                android:layout_toRightOf="@+id/address_detail_name"
                android:background="#faa9a4"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:src="@mipmap/women" />

            <ImageView
                android:id="@+id/address_detail_level"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_28"
                android:scaleType="fitStart"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_24"
                android:layout_toRightOf="@+id/address_detail_menorwomen"
                android:src="@mipmap/general" />

            <TextView
                android:id="@+id/address_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_detail_name"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:layout_toRightOf="@+id/address_detail_avatar"
                android:maxLines="1"
                android:textColor="#8c8c8c"
                android:textSize="@dimen/px_text_24" />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="#4ccc" />
    <TextView
        android:id="@+id/photos_title"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdads"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:maxLines="1"
        android:text="照片"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <LinearLayout
        android:id="@+id/photos_layout"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/px_5"
            android:id="@+id/address_detail_iv_one"
            android:layout_gravity="center"
            android:layout_width="@dimen/px_130"
            android:layout_height="@dimen/px_130"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar_no_radios" />
        <ImageView
            android:layout_margin="@dimen/px_5"
            android:scaleType="centerCrop"
            android:id="@+id/address_detail_iv_two"
            android:layout_gravity="center"
            android:layout_width="@dimen/px_130"
            android:layout_height="@dimen/px_130"
            android:src="@mipmap/avatar_no_radios"
            />
        <ImageView
            android:layout_margin="@dimen/px_5"
            android:scaleType="centerCrop"
            android:id="@+id/address_detail_iv_three"
            android:layout_gravity="center"
            android:layout_width="@dimen/px_130"
            android:layout_height="@dimen/px_130"
            android:src="@mipmap/avatar_no_radios"
            />

        <ImageView
            android:layout_margin="@dimen/px_5"
            android:scaleType="centerCrop"
            android:id="@+id/address_detail_iv_four"
            android:layout_gravity="center"
            android:layout_width="@dimen/px_130"
            android:layout_height="@dimen/px_130"
            android:src="@mipmap/avatar_no_radios"
            />


    </LinearLayout>
    <View
        android:id="@+id/fdads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="#4ccc" />
    <TextView
        android:id="@+id/address_detail_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdads"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:maxLines="1"
        android:text="个人信息"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:id="@+id/address_detail_personal_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_detail_personal"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_15"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:maxLines="1"
        android:text="个人签名"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:id="@+id/address_detail_personal_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:maxLines="1"
        android:text="兴趣爱好"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:id="@+id/address_detail_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="#4ccc" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:maxLines="1"
        android:text="个人说明"
        android:textColor="#000"
        android:textSize="@dimen/px_text_28" />

    <TextView
        android:visibility="gone"
        android:id="@+id/address_detail_personal_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_15"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="流年无恙，故人在何方，岁月中有多少回眸的叹息，品寂寞，悟人生。"
        android:textColor="#666"
        android:textSize="@dimen/px_text_28" />
    </LinearLayout>
    </ScrollView>

        <RadioGroup
            android:id="@+id/contanct_detail_rg_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="#f00"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/contanct_detail_rb_chat"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/chat"
                android:text="对话" />

            <RadioButton
                android:id="@+id/contanct_detail_rb_gift"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/send_gift_small"
                android:text="送礼物" />

            <RadioButton
                android:id="@+id/contanct_detail_rb_report"
                style="@style/contact_Bottom_Tab_Style"
                android:drawableLeft="@mipmap/report"
                android:text="举报" />

        </RadioGroup>



</LinearLayout>