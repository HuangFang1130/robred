<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_110"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/red_detail_people_avatar"
        android:layout_width="@dimen/px_70"
        android:layout_height="@dimen/px_70"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_20"
        android:scaleType="fitXY"
        android:src="@mipmap/man_avatar" />

    <TextView

        android:id="@+id/red_detail_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:layout_toRightOf="@+id/red_detail_people_avatar"
        android:text="刘岩"
        android:textColor="#000"
        android:textSize="@dimen/px_text_26" />

    <TextView
        android:id="@+id/red_detail_people_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_detail_people_name"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/red_detail_people_avatar"
        android:text="2015-9-11 19:10" />

    <TextView
        android:id="@+id/red_detail_people_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_20"
        android:text="10.25元"
        android:textColor="#4000"
        android:textSize="@dimen/px_text_20" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#ccc"

        />
</RelativeLayout>