<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.jiahehongye.robred.activity.SnatchOrderActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80">

        <RelativeLayout
            android:id="@+id/snatch_back"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/duobao_order"
            android:textColor="@color/black"
            android:textSize="@dimen/px_text_34" />

        <RelativeLayout
            android:id="@+id/go_goldrank"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_80"
            android:layout_gravity="right|center_vertical">

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="@dimen/px_20">

        <LinearLayout
            android:id="@+id/order_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:id="@+id/order_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="@string/duobao_all"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_wait_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/order_wait_pay_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="@string/duobao_ing"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_wait_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/order_wait_send_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="@string/duobao_already"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_wait_refund"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/order_wait_refund_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="@string/duobao_finish"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/duobaoorder_label"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:background="@color/home_state_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_25"
        android:background="@color/basebackground" />

    <android.support.v4.view.ViewPager
        android:id="@+id/duobaoorder_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
