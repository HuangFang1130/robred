<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="@dimen/px_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30">

        <ImageView
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80"
            android:layout_marginTop="@dimen/px_30"
            android:src="@mipmap/avatar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginTop="@dimen/px_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="发五金节课性"
                    android:textColor="@color/register_tv_color"
                    android:textSize="@dimen/px_28" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:textSize="@dimen/px_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="2016/12/12 10:10"
                        android:textColor="@color/grabred_tv_dd" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="@dimen/px_30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_30"
                    android:text="防辐射服的说法放松放松开发商分开圣诞节疯狂山东平台入口与热热饭开发商都烦死了肉考多少分空额外婆微积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:background="@color/basebackground"
                android:layout_marginTop="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:paddingLeft="@dimen/px_20"
                    android:paddingRight="@dimen/px_20"
                    android:paddingTop="@dimen/px_15"
                    android:paddingBottom="@dimen/px_15"
                    android:textSize="@dimen/px_26"
                    android:textColor="@color/billion_tv_ss"
                    android:text="放得开光电开关打开，请求哦哦水电费发明啦连胜文蜂蜜水螺蛳粉"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>