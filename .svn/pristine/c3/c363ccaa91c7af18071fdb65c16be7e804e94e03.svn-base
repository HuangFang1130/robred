<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/px_520"
        android:layout_height="@dimen/px_690"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_qianghongbao"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grab_pop_close"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px_30"
            android:src="@mipmap/close" />

        <ImageView
            android:id="@+id/grab_pop_avatar"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_74"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/grab_pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grab_pop_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_text_28"
            android:text="龙泉春"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/send_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grab_pop_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_3"
            android:text="发一个红包"
            android:textSize="@dimen/px_text_28"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/grab_pop_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_red"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            android:layout_marginTop="@dimen/px_60"
            android:text="定制人生，专属回忆"
            android:textSize="@dimen/px_text_43"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/grab_pop_anim"
            android:layout_width="@dimen/px_130"
            android:layout_height="@dimen/px_130"
            android:layout_below="@+id/grab_pop_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_62"
            android:src="@mipmap/btn_qiang" />
    </RelativeLayout>
</RelativeLayout>