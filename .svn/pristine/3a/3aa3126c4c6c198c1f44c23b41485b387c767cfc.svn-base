<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#4ccc"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/application_title"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dfjsafkldj"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/px_30"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_32"
                        android:text="您参与的一元夺宝开抢了"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fdajlfdjaklfjds"
                        android:layout_below="@+id/dfjsafkldj"
                        android:textColor="#b3b3b3"

                        android:layout_marginTop="@dimen/px_15"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_24"

                        android:text="2019/09/12 11:15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/vkakldfjklafasd"
                        android:layout_below="@+id/fdajlfdjaklfjds"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_20"
                        android:src="@mipmap/avatar_no_radios"
                        android:layout_width="@dimen/px_100"

                        android:layout_marginBottom="@dimen/px_30"
                        android:layout_height="@dimen/px_100" />


                    <TextView
                        android:layout_below="@+id/fdajlfdjaklfjds"
                        android:textColor="#b3b3b3"
                        android:layout_toRightOf="@+id/vkakldfjklafasd"
                        android:layout_marginTop="@dimen/px_15"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_26"
                        android:layout_marginRight="@dimen/px_20"
                        android:lineSpacingExtra="@dimen/px_5"
                        android:text="如果你觉得自己长的不怎么样，那该如何让自己喜欢的人对你念念不忘，而且还能让对方永远都不希望你消失"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dfjsafkddadldj"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/px_30"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_32"
                        android:text="无图片样式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/dfdfg"
                        android:layout_below="@+id/dfjsafkddadldj"
                        android:textColor="#b3b3b3"

                        android:layout_marginTop="@dimen/px_15"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_24"

                        android:text="2019/09/12 11:15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_below="@+id/dfdfg"
                        android:textColor="#b3b3b3"
                        android:layout_marginBottom="@dimen/px_20"
                        android:layout_marginTop="@dimen/px_15"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textSize="@dimen/px_text_26"
                        android:layout_marginRight="@dimen/px_20"
                        android:lineSpacingExtra="@dimen/px_5"
                        android:text="如果你觉得自己长的不怎么样，那该如何让自己喜欢的人对你念念不忘，而且还能让对方永远都不希望你消失"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>