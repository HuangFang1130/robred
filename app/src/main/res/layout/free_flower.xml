<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_36"
                android:text="@string/login_signin"
                android:textColor="@color/black"
                android:textSize="@dimen/px_30" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/free_flowertext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginTop="@dimen/px_40"
                    android:textColor="@color/reset_tv_color"
                    android:textSize="@dimen/px_30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_40"
                android:background="@color/view_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_36"
                android:text="@string/yaoqing_friend"
                android:textColor="@color/black"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/free_flower2text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_40"
                android:textColor="@color/reset_tv_color"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/free_flower2text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:textColor="@color/reset_tv_color"
                android:textSize="@dimen/px_30" />

            <Button
                android:id="@+id/yaoqing_now"
                android:layout_width="@dimen/px_232"
                android:layout_height="@dimen/px_66"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_74"
                android:background="@drawable/red_little_button"
                android:text="@string/yaoqing_now"
                android:textColor="@color/white"
                android:textSize="@dimen/px_text_30" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>