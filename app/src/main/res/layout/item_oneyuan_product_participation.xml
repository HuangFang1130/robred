<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/WHITE"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:id="@+id/ll_oneyuan_home_list_item"
    android:orientation="horizontal" >
    
    <com.jiahehongye.robred.view.CircleImageView 
        android:id="@+id/iv_oneyuan_salesdetail_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/winnerhead_3x"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp">
            <TextView 
                android:id="@+id/tv_oneyuan_salesdetail_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猴年大吉"
                android:textSize="12sp"
                android:textColor="#249fff"/>
            <TextView 
                android:id="@+id/tv_oneyuan_salesdetail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-03-04    17:43:42:459"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"/>
            <TextView 
                android:id="@+id/tv_oneyuan_salesdetail_item_duijianghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑奖号："
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_alignParentBottom="true"/>
            <TextView 
                android:id="@+id/tv_oneyuan_salesdetail_item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10002395"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_oneyuan_salesdetail_item_duijianghao"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
