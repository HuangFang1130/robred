<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/grabred_personal_avatar"
        android:layout_width="@dimen/px_80"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/px_80"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_40"
        android:src="@mipmap/grab_avatar" />
    <ImageView
        android:id="@+id/grabred_personal_level"
        android:layout_width="@dimen/px_80"
        android:layout_below="@+id/grabred_personal_avatar"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_5"
        android:src="@mipmap/general" />

    <TextView
        android:id="@+id/grabred_personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_40"
        android:layout_toRightOf="@+id/grabred_personal_avatar"
        android:text="@string/grabred_merchant_name"
        android:textColor="@color/billion_tv_ss"
        android:textSize="@dimen/px_text_24" />




    <RelativeLayout
        android:layout_width="@dimen/px_420"
        android:layout_height="@dimen/px_180"
        android:layout_below="@+id/grabred_personal_name"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_15"
        android:elevation="@dimen/px_1"
        android:layout_toRightOf="@+id/grabred_personal_avatar"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/grabred_personal_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/grab_red_bg" />

        <TextView
            android:id="@+id/grabred_personal_des"
            android:text="定制人生 专属回忆龙泉春酒庄窖藏"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/px_110"
            android:layout_marginRight="@dimen/px_20"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/px_30"
            android:textSize="@dimen/px_text_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginLeft="@dimen/px_20"
            android:text="@string/grabred_tv_grab"
            android:textColor="@color/grabred_tv_dd"
            android:textSize="@dimen/px_text_22" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/grabred_personal_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginRight="@dimen/px_20"
            android:text="@string/grabred_tv_state"
            android:textColor="@color/grabred_state"
            android:textSize="@dimen/px_text_23" />


    </RelativeLayout>

</RelativeLayout>