            android:background="@drawable/report_checkbox_selector"
            android:button="@null"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_26" />

        <TextView
            android:layout_marginLeft="@dimen/px_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/jubaocheck1"
            android:text="@string/report_tv_sex"
            android:textColor="@color/report_tv_bg"
            android:textSize="@dimen/px_text_28" />

        <View
