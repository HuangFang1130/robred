        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="@drawable/report_edittext_shap"
        android:gravity="top"
        android:textColorHint="@color/freshnews_et_hint"
        android:hint="@string/report_tv_ddd"
        android:lines="5"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/px_text_26" />


    <Button
        android:id="@+id/report_btn_submit"
        android:layout_marginTop="@dimen/px_50"
        android:layout_marginRight="@dimen/px_20"
