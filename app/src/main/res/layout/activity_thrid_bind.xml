<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/third_bind_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_20"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="绑定账号"
            android:textColor="#000"
            android:textSize="@dimen/px_text_30" />

        <TextView
            android:id="@+id/application_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center"
            android:text="hehe"
            android:textColor="#ccc"
            android:textSize="@dimen/px_text_26"
            android:visibility="gone" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_35"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:alpha="0.7"
        android:text="关联已有抢红包账号"
        android:textSize="@dimen/px_text_24" />

    <EditText
        android:id="@+id/third_bind_et_phone"
        style="@style/login_input_textview"
        android:layout_marginTop="@dimen/px_10"
        android:drawableLeft="@mipmap/login_phone"
        android:hint="@string/login_notify_phone"
        android:inputType="text"
        android:text="" />


    <EditText
        android:id="@+id/third_bind_et_password"
        style="@style/login_input_textview"
        android:layout_marginTop="@dimen/px_28"
        android:drawableLeft="@mipmap/longin_password"
        android:hint="@string/login_notify_password"
        android:inputType="textPassword"
        android:text="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_35"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_30"
        android:alpha="0.5"
        android:text="关联后，您的QQ账号和抢红包账号都可以登录"
        android:textSize="@dimen/px_text_24" />

    <Button
        android:id="@+id/third_bind_bt_login"
        style="@style/login_button"
        android:layout_marginTop="@dimen/px_10"
        android:text="@string/login_title"
        android:textSize="@dimen/px_text_32" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_20">

        <TextView
            android:id="@+id/third_bind_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:alpha="0.7"
            android:text="忘记密码？"
            android:textSize="@dimen/px_text_24" />
    </RelativeLayout>

</LinearLayout>