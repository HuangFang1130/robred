<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_100"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/message_rl_icon_content"
        android:layout_width="@dimen/px_120"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/message_iv_icon"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:scaleType="fitXY"
            android:src="@drawable/ease_default_avatar" />

        <TextView
            android:id="@+id/message_iv_red_icon"
            android:background="@drawable/home_red_red_point"
            android:layout_width="@dimen/px_15"
            android:layout_height="@dimen/px_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_12"
            android:layout_marginTop="@dimen/px_6"
            android:gravity="center"

            android:textSize="@dimen/px_text_24" />
    </RelativeLayout>



    <TextView
        android:id="@+id/message_tv_typename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginTop="@dimen/px_15"

        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:text="通知消息"
        android:textColor="#000"
        android:textSize="@dimen/px_text_26" />

    <TextView
        android:id="@+id/message_tv_typedes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_tv_typename"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/message_rl_icon_content"
        android:text="有新的消息了" />

    <TextView
        android:id="@+id/message_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_20"
        android:text="2016/10/18"
        android:textColor="#4000"
        android:textSize="@dimen/px_text_20" />
</RelativeLayout>