<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_210">


        <TextView
            android:id="@+id/rank_number2"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/px_28"
            android:layout_gravity="center_vertical"
            android:text="NO.1"
            android:layout_width="@dimen/px_124"
            android:layout_height="@dimen/px_60" />


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="@dimen/px_180"
                android:layout_height="@dimen/px_180">


                <ImageView
                    android:id="@+id/gd_head2"
                    android:layout_width="@dimen/px_120"
                    android:layout_height="@dimen/px_120"
                    android:src="@mipmap/paiming_bg"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_marginBottom="@dimen/px_65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yin"
                    android:layout_gravity="center_horizontal|top" />
                <ImageView
                    android:layout_marginBottom="@dimen/px_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/two"
                    android:layout_gravity="center_horizontal|bottom" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/px_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/gd_name2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px_32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/gd_sex2"
                        android:paddingRight="@dimen/px_10"
                        android:paddingLeft="@dimen/px_10"
                        android:background="@color/man_back"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_28" />
                    <ImageView
                        android:id="@+id/gd_level2"
                        android:layout_marginLeft="@dimen/px_20"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_28" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/px_14"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grabred_state"
                        android:textSize="@dimen/px_28"
                        android:text="贡献"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/gd_num2"
                        android:textSize="@dimen/px_28"
                        android:textColor="@color/gold_color"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/grabred_state"
                        android:textSize="@dimen/px_28"
                        android:text="金币"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </FrameLayout>


</LinearLayout>