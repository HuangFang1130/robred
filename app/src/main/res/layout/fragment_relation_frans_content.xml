<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_160"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        >

        <ImageView
            android:id="@+id/relation_avatar"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:src="@mipmap/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_toRightOf="@+id/relation_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/relation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/relation_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_18"
                android:text=""
                android:textColor="#999"
                android:textSize="@dimen/px_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/relation_attenion"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_56"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/yiguanzhu"
            android:gravity="center"
            android:text="已关注"
            android:textColor="@color/red"
            android:textSize="@dimen/px_26" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/line_color" />


    </RelativeLayout>
</LinearLayout>
