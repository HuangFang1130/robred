<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/system_content_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_30"
                android:text="提现成功"
                android:textColor="#000"
                android:textSize="@dimen/px_text_32" />

            <TextView
                android:id="@+id/system_content_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/system_content_tv_title"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_15"
                android:text="2019/09/12 11:15"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/px_text_24" />


            <TextView
                android:id="@+id/system_content_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/system_content_tv_date"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_15"
                android:lineSpacingExtra="@dimen/px_5"
                android:text="亲爱的用户，您好，您申请的提现已经到账，请注意查收"
                android:textColor="#808080"
                android:textSize="@dimen/px_text_26" />

            <RelativeLayout
                android:visibility="invisible"
                android:layout_below="@+id/system_content_tv_detail"
                android:id="@+id/system_content_rl_detail"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/system_content_iv_row_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/px_5"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_10"
                    android:layout_marginTop="@dimen/px_5"
                    android:src="@mipmap/row_down" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>