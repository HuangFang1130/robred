<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
        <!-- 渐变 -->
        <gradient android:endColor="#FFFFFF" android:gradientRadius="50" android:startColor="#f00" android:type="radial" />
        </shape>
    </item>
    
    <item>
        <shape>
            <stroke android:color="#4ebfa1"
                android:width="1px"/>
            <solid android:color="#ffffff" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>
