<?xml version="1.0" encoding="utf-8"?>
    <!-- 定义矩形rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle"  >
    
    <!-- 设置边框的大小和颜色 -->
    <stroke android:width="2px" android:color="#4DA9FA" /> 
     
    <!-- 设置矩形内的颜色,此处为透明色 -->
